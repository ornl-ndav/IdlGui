;if user double clicked the same point, that means reset of zoom
FUNCTION isZoomReset, Event

  WIDGET_CONTROL, Event.top, GET_UVALUE=global
  
  x0y0x1y1 = (*global).x0y0x1y1
  x0 = x0y0x1y1[0]
  y0 = x0y0x1y1[1]
  x1 = x0y0x1y1[2]
  y1 = x0y0x1y1[3]
  
  IF (x0 NE x1) THEN RETURN, 0
  IF (y0 NE y1) THEN RETURN, 0
  RETURN, 1

END